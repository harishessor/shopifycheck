.content-over-media {
  position: relative;
  overflow: hidden; /* Keeps overlay contained */
}

/* Button overlay container */
.overlay-button-container {
  position: absolute !important;
  top: 50%;
  left: 10px;
  transform: translateY(-50%);
  z-index: 2; /* Ensure the overlay sits over the image */
}

/* Extra circular button styling with sliding hover effect */
.extra-button {
  pointer-events: auto;  /* Re-enable interaction on the button */
  position: relative;      /* Position context for the pseudo-element */
  overflow: hidden;        /* Hide sliding pseudo-element overflow */
  background-color: transparent;  /* Base background is transparent */
  border-radius: 50%;      /* Circular shape */
  width: 160px;
  height: 160px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;              /* No internal padding */
  cursor: pointer;
  color: white;            /* Initial text color */
  transition: color 0.4s ease;
}

/* The pseudo-element creates the colored background */
.extra-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: {{ block.settings.extra_button_bg_color }};  /* Primary color */
  transition: transform 0.4s ease;  /* Smooth slide effect */
  transform: translateX(0);    /* Start covering the button */
  z-index: -1;                 /* Place behind the button text */
}


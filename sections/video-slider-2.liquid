{% comment %}
  Video Section:
  - Displays a heading and subheading (with customizable colors).
  - Each video block accepts a YouTube URL and an optional cover image.
  - The container uses a portrait (9:16) aspect ratio.
  - When the thumbnail is clicked, it is replaced by an autoplaying video embed.
  - Desktop: Shows a 4-column grid.
  - Mobile: Initializes a Slick slider with custom circular arrows and dot navigation.
  - The play button now uses your ripple effect.
{% endcomment %}

<section class="video-section" id="video-section" style="background-color: {{ section.settings.section_bg_color }};">
  <div class="video-section__header">
    {% if section.settings.heading %}
      <h2 style="color: {{ section.settings.heading_color }}; font-size: {{ section.settings.heading_font_size }}px;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    {% if section.settings.subheading %}
      <p style="color: {{ section.settings.subheading_color }}; font-size: {{ section.settings.subheading_font_size }}px;">
        {{ section.settings.subheading }}
      </p>
    {% endif %}
  </div>

  <div class="video-section__videos">
  {% for block in section.blocks %}
    {% if block.settings.youtube_video != blank %}
      {% assign video_id = block.settings.youtube_video | split: 'v=' | last | split: '&' | first %}
      <div class="video-block" data-video-id="{{ video_id }}">
        {% if block.settings.cover_image != blank %}
          <div class="video-thumbnail" style="background-image: url('{{ block.settings.cover_image | img_url: 'master' }}');">
            <div class="play-icon video-wrapper__play-button--ripple">&#9658;</div>
          </div>
        {% else %}
          <div class="video-responsive">
            <iframe
              src="https://www.youtube.com/embed/{{ video_id }}?rel=0&amp;enablejsapi=1"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
        {% endif %}
      </div>
    {% endif %}
  {% endfor %}
</div>
</section>

<style>
  /* Define the play button background variable (RGB format) */
  :root {
    --play-button-background: 252, 250, 248; /* Adjust as needed */
  }

  /* Section container */
  .video-section {
    padding: 50px;
  }
  .video-section__header {
    text-align: center;
    margin-bottom: 20px;
  }

  /* Desktop grid view (screens 1025px and above) with a reduced gap */
  @media screen and (min-width: 1025px) {
    .video-section__videos {
      display: flex;
      /* grid-template-columns: repeat(4, 1fr); */
      gap: 20px;
      justify-content: center;
    }
  }
  .video-block {
    width: 253px !important;
    height: 450px !important;
    position: relative;
    background: #f9f9f9;
    border: 1px solid #ddd;
  }

  /* Portrait thumbnail with fixed dimensions */
  .video-thumbnail {
    max-width: 253px !important;
    position: relative;
    width: 100%;
    padding-top: 178.5%; /* roughly a 450px height when width is 253px */
    background-size: cover;
    background-position: center;
    cursor: pointer;
  }
  
  /* Play icon styling */
  .video-thumbnail .play-icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 34px;
    color: #4a4a4a;
    background: #fcfaf8e6;;
    border-radius: 50%;
    width: 90px;
    height: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Ripple animation keyframes (using your provided code) */
  @keyframes playButtonRipple {
    0% {
      box-shadow: 0 0 0 0 rgb(var(--play-button-background)), 0 0 0 0 rgb(var(--play-button-background));
    }
    100% {
      box-shadow: 0 0 0 9px rgba(var(--play-button-background), 0), 0 0 0 18px rgba(var(--play-button-background), 0);
    }
  }
  .video-wrapper__play-button--ripple {
    animation: playButtonRipple 1400ms ease-in-out infinite;
  }

  /* Responsive video embed container */
  .video-responsive {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 177.78%;
  }
  .video-responsive iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Mobile view (smartphones: max-width 768px) - using slick slider */
  @media screen and (max-width: 768px) {
    .video-section__videos {
      display: block;
      width: 253px !important;
      margin: 0 auto;
    }
    .video-block {
      margin-bottom: 20px;
    }
    .custom-arrow {
      width: 40px;
      height: 40px;
      border: none;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 2;
    }
    .slick-prev { left: 5%; }
    .slick-next { right: 5%; }
    .slick-dots {
      position: absolute;
      bottom: -30px !important;
      width: 100%;
      text-align: center;
    }
    .slick-dots li button:before {
      content: '';
      display: block;
      width: 10px;
      height: 10px;
      border: 1px solid #009688;
      border-radius: 50%;
      background: transparent;
    }
    .slick-prev:before {
      position: relative;
      bottom: 16px;
      right: 20px;
    }
    .slick-next:before {
      position: relative;
      bottom: 16px;
      left: 28px;
    }
    .slick-prev:before, .slick-next:before {
      font-size: 35px !important;
      color: #005461 !important;
    }
    .slick-dots li.slick-active button:before {
      background: #009688;
    }
    h2{
      font-size: 27px !important;
    }
  }

  /* Tablet view (min-width: 769px and max-width: 1024px): Horizontal scroll with increased gap */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .video-section__videos {
      display: flex;
      gap: 20px; /* Increased gap for tablets */
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      /* Allow extra space so that if only 3 items fit, you can scroll for more */
      padding-bottom: 10px;
    }
    .video-block {
      flex: 0 0 auto;
      scroll-snap-align: start;
    }
  }
  @media screen and (min-width: 1400px){
    .video-section__videos {
      gap: 13vh;
    }
  }
</style>


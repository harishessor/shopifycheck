          {%- endif -%}

          {%- if section.blocks.size > 1 -%}
            <carousel-navigation align-selected class="featured-collections-navigation scroll-area bleed" aria-controls="{{ wrapper_carousel_id }}">
              {%- for block in section.blocks -%}
                <button class="h2" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
                  {{- block.settings.title | default: block.settings.collection.title | default: 'Collection' -}}
                </button>
              {%- endfor -%}
            </carousel-navigation>
          {%- else -%}
            <h2 class="h2">{{ section.blocks.first.settings.title }}</h2>
          {%- endif -%}
        </div>

        <featured-collections-carousel id="{{ wrapper_carousel_id }}" class="featured-collections-carousel">
          {%- for block in section.blocks -%}
            <div class="featured-collections-carousel__item {% if forloop.first %}is-selected{% endif %}" {{ block.shopify_attributes }}>
              {%- capture product_list -%}
                {%- assign should_reveal = false -%}

                {%- if settings.stagger_products_apparition and forloop.first -%}
                  {%- assign should_reveal = true -%}
                {%- endif -%}
                {%- for product in block.settings.collection.products limit: block.settings.products_count -%}
                  {%- render 'product-card', product: product, reveal: should_reveal, position: forloop.index, hide_product_information: section.settings.hide_product_information, block: block -%}
                {%- else -%}
                  {%- for i in (1..block.settings.products_count) -%}
                    {%- render 'product-card-placeholder', reveal: should_reveal, loop_index: forloop.index0, hide_product_information: section.settings.hide_product_information -%}
                  {%- endfor -%}
                {%- endfor -%}
              {%- endcapture -%}

              {%- if section.settings.stack_products -%}
                {% comment %} <product-list class="product-list {% if section.settings.hide_product_information %}product-list--compact{% endif %} justify-center">
                  {{- product_list -}}
                </product-list> {% endcomment %}

                {% comment %} start modification {% endcomment %}

                <product-list class="product-list {% if section.settings.hide_product_information %}product-list--compact{% endif %} justify-center">
                  {%- assign count_rendered = 0 -%}
                  {%- for product in block.settings.collection.products  -%}
                  {% if product.variants.size > 0 and block.settings.show_variants == true %}
                    {% for variant in product.variants  %}
                      {% capture output_buffer %}
                        {%- render 'product-card-variant', product: variant, reveal: true, position: forloop.index, hide_product_information: section.settings.hide_product_information, override_cta_text: section.settings.override_cta_text, custom_cta_text: section.settings.custom_cta_text, stacked: true -%}
                      {% endcapture %}
                      {% if block.settings.fake_tag_filtering != 'none' %}
                        {% assign fake_variant_tag = variant.metafields.my_fields.fake_variant_tag.value %}
                        {% if block.settings.fake_tag_filtering == 'with_tag' %}
                          {% if fake_variant_tag contains block.settings.fake_tag %}
                            {% assign count_rendered = count_rendered | plus: 1 %}
                            {{ output_buffer }}
                          {% endif %}
                        {% elsif block.settings.fake_tag_filtering == 'without_tag' %}
                          {% if fake_variant_tag contains block.settings.fake_tag %}
                          {% else %}
                            {% assign count_rendered = count_rendered | plus: 1 %}
                            {{ output_buffer }}
                          {% endif %}
                        {% endif %}
                      {% else %}
                        {% assign count_rendered = count_rendered | plus: 1 %}
                        {{ output_buffer }}
                      {% endif %}

                      
                    {% endfor %}
                  {% else %}
                    {% capture output_buffer %}
                        {%- render 'product-card', product: product, position: forloop.index, hide_product_information: section.settings.hide_product_information, stacked: true -%}
                      {% endcapture %}
                      {% assign count_rendered = count_rendered | plus: 1 %}
                      {{ output_buffer }}
                  {%endif %}
                  {%  if count_rendered >= block.settings.products_count %}
                    {% break %}
                  {% endif %}
                  
                    {%- endfor -%}
                  </product-list>
                {% comment %} end modification {% endcomment %}

              {%- else -%}
                {%- assign product_carousel_id = 'featured-collections-product-list-carousel-' | append: block.id -%}

                <product-list class="floating-controls-container floating-controls-container--inside floating-controls-container--on-hover">
                  <carousel-prev-button class="floating-controls-container__control" aria-controls="{{ product_carousel_id }}">
                    <button type="button" class="prev-next-button prev-next-button--prev circle-button hover:animate-icon-inline" disabled>
                      <span class="sr-only">{{ 'general.accessibility.previous' | t }}</span>
                      {%- render 'icon' with 'arrow-left', direction_aware: true -%}
                    </button>
                  </carousel-prev-button>

                  <scroll-carousel id="{{ product_carousel_id }}" group-cells allow-drag class="product-list {% if section.settings.hide_product_information %}product-list--compact{% endif %} product-list--carousel scroll-area bleed md:unbleed">
                    {{- product_list -}}
                  </scroll-carousel>
                  
                  <carousel-next-button class="floating-controls-container__control" aria-controls="{{ product_carousel_id }}">
                    <button type="button" class="prev-next-button prev-next-button--next circle-button hover:animate-icon-inline">
                      <span class="sr-only">{{ 'general.accessibility.next' | t }}</span>
                      {%- render 'icon' with 'arrow-right', direction_aware: true -%}
                    </button>
                  </carousel-next-button>
                </product-list>
              {%- endif -%}

              {%- if block.settings.link_text != blank -%}
                {%- assign button_link = block.settings.link_url | default: block.settings.collection.url | default: '#' -%}

                <div class="view_all_button justify-self-center">
                  {%- render 'button', href: button_link, content: block.settings.link_text -%}
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </featured-collections-carousel>
      </div>
    </div>
  </div>
{%- endif -%}

<style>
#shopify-section-{{ section.id }} .featured-collections-navigation button {
  padding: 14px 26px;
  border: 1px solid #04777f;
  border-radius: 999px;
  color: #04777f;
  transition: 0.2s;
  cursor: pointer;
  font-size: 16px;
  font-style: normal;
  font-weight: 700;
  line-height: normal;
  letter-spacing: 0.8px;
  text-transform: uppercase;
}
#shopify-section-{{ section.id }} .featured-collections-navigation button:after {
  display: none;
}
#shopify-section-{{ section.id }} .featured-collections-navigation button[aria-current="true"],
#shopify-section-{{ section.id }} .featured-collections-navigation button:hover {
  background: #d9ede9;
  border-color: #04777f;
}
#shopify-section-{{ section.id }} .featured-collections-navigation {
  column-gap: 1.5rem;
}
#shopify-section-{{ section.id }} .section--header .h3 {
  font-style: normal;
  font-weight: 400;
  line-height: 58px; /* 138.095% */
  letter-spacing: -0.96px;
  color: #035C68;
  display: flex;
  align-items: center;
  gap: 10px;
  justify-content: center;
  font-size: var(--text-h2);
}
#shopify-section-{{ section.id }} .section--header .h3 svg:first-child {
  transform: translateY(-30%);
}
#shopify-section-{{ section.id }} .section--header .h3 svg:last-child {
  transform: translateY(30%);
}
#shopify-section-{{ section.id }} .view_all_button .button {
  background: transparent;
  color: #4099A0;
}
#shopify-section-{{ section.id }} .view_all_button .button:hover {
  background: #4099A0;
  color: #fff;
}
@media screen and (min-width: 768px) {
  #shopify-section-{{ section.id }} .product-list .product-card:nth-of-type(n+5) {
    display: none;
  }
}
@media(max-width: 767px){
  #shopify-section-{{ section.id }} .section--header .h3 svg {
    display: none;
  }
  #shopify-section-{{ section.id }} .featured-collections-navigation {
    column-gap: 20px;
  }
  #shopify-section-{{ section.id }} .product-list .product-card:nth-of-type(n+7) {
    display: none;
  }
}
@media(max-width: 480px){
  .product-card__quick-add-button {
    padding: .5rem 1.5rem;
    width: auto;
  }
}
</style>



<script>
  // keep track of every YT.Player instance
  var ytPlayers = [];

  // called by the IFrame API when it's ready
  function onYouTubeIframeAPIReady() {
    // wrap every existing .video-responsive iframe
    document.querySelectorAll('.video-responsive iframe').forEach(registerIframe);
  }

  // register one iframe with YT.Player, keep it in the array
  function registerIframe(iframe) {
    var player = new YT.Player(iframe, {
      events: {
        'onStateChange': onPlayerStateChange
      }
    });
    ytPlayers.push(player);
  }

  // whenever any player starts playing, pause all the rest
  function onPlayerStateChange(event) {
    if (event.data === YT.PlayerState.PLAYING) {
      ytPlayers.forEach(function(p) {
        if (p !== event.target) {
          p.pauseVideo();
        }
      });
    }
  }

  document.addEventListener("DOMContentLoaded", function() {
    // helper to pause via postMessage (used before replacing a thumbnail)
    function pauseAllVideosQuick() {
      document.querySelectorAll('.video-responsive iframe').forEach(function(iframe) {
        iframe.contentWindow.postMessage(
          JSON.stringify({ event: 'command', func: 'pauseVideo', args: [] }),
          '*'
        );
      });
    }

    // thumbnail click: pause others, inject iframe + enablejsapi, register it
    document.querySelectorAll('.video-thumbnail').forEach(function(thumbnail) {
      thumbnail.addEventListener('click', function() {
        pauseAllVideosQuick();

        var block = thumbnail.closest('.video-block');
        var id    = block.getAttribute('data-video-id');
        block.innerHTML = ''
          + '<div class="video-responsive">'
          +   '<iframe src="https://www.youtube.com/embed/' + id

      <div class="cart-drawer__complementary-products complementary-products">
  {%- assign carousel_id = 'complementary-products-carousel-' | append: section.id -%}
  
  {%- comment %}
    Calculate how many valid products we have (available and not in cart)
  {%- endcomment %}
  {% assign valid_products_count = 0 %}
  {% for product in section.settings.cross_sell_products %}
    {% assign products_in_cart = cart.items | where: 'product_id', product.id %}
    {% if products_in_cart.size == 0 and product.available %}
      {% assign valid_products_count = valid_products_count | plus: 1 %}
    {% endif %}
  {% endfor %}
  
  {%- comment %}
    Calculate number of slides (2 products per slide)
  {%- endcomment %}
  {% assign slide_count = valid_products_count | divided_by: 2 %}
  {% assign remainder = valid_products_count | modulo: 2 %}
  {% if remainder != 0 %}
    {% assign slide_count = slide_count | plus: 1 %}
  {% endif %}
  
  {%- if section.settings.cross_sell_title != blank or section.settings.cross_sell_stack_products == false and slide_count > 1 -%}
    <div class="complementary-products__header complementary-products__header--align-start">
      <p class="h6">{{ section.settings.cross_sell_title | default: "Complete with" }}</p>
      {%- if section.settings.cross_sell_stack_products == false and slide_count > 1 -%}
        <carousel-navigation aria-controls="{{ carousel_id }}" class="page-dots page-dots--narrow">
          {%- for i in (1..slide_count) -%}
            <button class="relative" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
              <span class="sr-only">{{ 'general.accessibility.go_to_item' | t: index: forloop.index }}</span>
            </button>
          {%- endfor -%}
        </carousel-navigation>
      {%- endif -%}
    </div>
  {%- endif -%}
  
  <!-- Carousel container with a data attribute to trigger theme's carousel initialization -->
  <div id="{{ carousel_id }}" class="carousel-container" data-carousel>
    {% assign product_index = 0 %}
    {% for product in section.settings.cross_sell_products %}

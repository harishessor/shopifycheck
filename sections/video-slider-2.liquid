        });
      }
    } else {
      if(window.jQuery && typeof jQuery.fn.slick !== 'undefined' && jQuery('.video-section__videos').hasClass('slick-initialized')) {
        jQuery('.video-section__videos').slick('unslick');
      }
    }
  }
  document.addEventListener("DOMContentLoaded", function() {
    initSlider();
  });
  
  // Also listen for Shopify's section load event to cover when the section is added to product pages dynamically.
  document.addEventListener("shopify:section:load", function(event) {
    initSlider();
  });
  // Initialize slider on load and on resize.
  initSlider();
  window.addEventListener("resize", initSlider);
});

}

.btn-text-1 {
  /* text-decoration-line: line-through; */
  font-weight: 200;
  font-size: 20px;
  color: inherit;  /* Inherit color from .extra-button so it transitions on hover */
}

.btn-text-2 {
  font-weight: 600;
  color: inherit;  /* Inherit color as well */
}

